<h1>Login</h1>

<% if flash[:notice] %>
  <div><%= flash[:notice] %></div>
<% end %>
<br />

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  Name: <%= text_field_tag "user[name]" %><br />
  Password: <%= password_field_tag "user[password]" %><br />
  <input type=submit value='Sign In'>
<% end %>
